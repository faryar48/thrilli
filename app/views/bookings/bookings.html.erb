<% if pending.count > 0 %>
  <h1 class="bookings">Pending Bookings</h1>
<% end %>

<% pending.each do |booking| %>
<div class="border"> 
<div class="adventure-info">
    <%= link_to(booking.adventure.user.first_name, booking.adventure.user(booking.adventure.user.id)) %>'s <%= link_to(booking.adventure.title, booking.adventure(booking.adventure.id)) %> <p class="adventure-word">Adventure</p>
</div>
  <div class="creator-stuff">
  <%= image_tag(booking.adventure.user.profile_url(:medium), :class => "img-circle") %>
  </div>
  <div class="adventure-img">
  <%= image_tag(booking.adventure.profile_url(:large), :class => "img-rounded") %>
  </div>
  </div>
  <% end %>


