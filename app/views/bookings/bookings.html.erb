

<% c = @bookings.where(:accepted => 'yes') %>

<% if c.count > 0 %>
  <h1>Confirmed Bookings</h1>
<% end %>

<% c.each do |booking| %>



  <%=  %>

  <p><%= image_tag(booking.adventure.user.profile_url(:medium)) %><%= link_to(booking.adventure.user.first_name, booking.adventure.user(booking.adventure.user.id)) %>'s <%= link_to(booking.adventure.title, booking.adventure(booking.adventure.id)) %> Adventure</p>

  
  <%= image_tag(booking.adventure.profile_url(:medium)) %>
  <p><%= booking.adventure.user.first_name %> says: '<%= booking.message %>'</p>

  <p>

  Other adventurers on the trip:   

  <% booking.adventure.bookings.where(:accepted => 'yes').each do |booking_two| %>

    <%= image_tag(booking_two.user.profile_url(:medium)) %>
    <%= booking_two.user.first_name %>

  <% end %>
  
  </p>
<% end %>



<% p = @bookings.where(:accepted => nil ) %>

<% if p.count > 0 %>
  <h1>Pending Bookings</h1>
<% end %>

<% p.each do |booking| %>

  <p><%= link_to(booking.adventure.user.first_name, booking.adventure.user(booking.adventure.user.id)) %>'s <%= link_to(booking.adventure.title, booking.adventure(booking.adventure.id)) %> Adventure</p>

  <%= image_tag(booking.adventure.profile_url(:medium)) %>
<% end %>



<% x = @bookings.where(:accepted => 'no' ) %>

<% if x.count > 0 %>
  <h1>Cancellations</h1>
<% end %>

<% x.each do |booking| %>

  <p><%= link_to(booking.adventure.user.first_name, booking.adventure.user(booking.adventure.user.id)) %>'s <%= link_to(booking.adventure.title, booking.adventure(booking.adventure.id)) %> Adventure</p>

  <%= image_tag(booking.adventure.profile_url(:medium)) %>
  <p><%= booking.adventure.user.first_name %> says: '<%= booking.message %>'</p>
<% end %>

