</div>

  <div class="creator-stuff">
  <%= image_tag(booking.adventure.user.profile_url(:medium), :class => "img-circle") %>


  <div class="creator-msg">
    <%= booking.adventure.user.first_name %> says: '<%= booking.message_decision %>'
  </div>
  </div>

  <div class="adventure-img">
  <%= image_tag(booking.adventure.profile_url(:large), :class => "img-rounded") %>
  </div>
</div>

<% end %>


