

<%=  form_for [@adventure,@booking] do |f| %>

<%= f.label :checkin %>
<%= f.text_field :checkin, :class => 'datepicker' %>

<%= f.label :checkout %>
<%= f.text_field :checkout, :class => 'datepicker' %>

<%= f.submit %>

<% end  %>


<script type="text/javascript">
  $(document).ready(function(){
    $('.datepicker').datepicker();
  });
</script>