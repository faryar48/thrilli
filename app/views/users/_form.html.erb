

 <div class="modal fade">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Sign up</h4>
      </div>
      <div class="modal-body">
<%= form_for @user do |f| %>
<%= f.file_field :profile, :placeholder => 'Profile Picture', :class => 'form-control' %>
<%= f.text_field :remote_profile_url, :placeholder => 'or input URL (profile pic)', :class => 'form-control' %>
<%= f.text_field :first_name, :autofocus => true, :required => true, :placeholder => 'First name', :class => 'form-control' %>
<%= f.text_field :last_name, :required => true, :placeholder => 'Last name', :class => 'form-control' %>

<%= f.text_field :email, :required => true, :placeholder => 'Email', :class => 'form-control' %>
<%= f.password_field :password, :class => 'form-control', :placeholder => 'Password' %>

<%= f.password_field :password_confirmation, :class => 'form-control', :placeholder => 'Password confirmation' %>
      </div>
      <div class="modal-footer">
          <% if @user.errors.any? %>
          <ol>
          <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
          <% end %>
          </ol>
          <% end %>
      <%= submit_tag 'Go!', :class => "btn btn-primary" %>
        <% end %>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->


<script>$('.modal').modal()</script>


